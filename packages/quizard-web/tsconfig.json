{
    "extends": ["../../tsconfig.base.json"],
    "compilerOptions": {
        "types": [
            "vite/client",
            "./styled-components.d.ts"
        ],
        "jsx": "react-jsx",
        "module": "ESNext",
        "moduleResolution": "bundler",

        // path mapping. Need to repeat this config in vite.config.cjs aswell
        "baseUrl": "./src", // This is to avoid adding the ./src prefix to each path below.
        "paths": {
            "@gql/*": ["gql/*"],
            "@components/*": ["components/*"],
            "@pages/*": ["pages/*"],
            "@hooks/*": ["hooks/*"],
            "@utils/*": ["utils/*"],
            "@config/*": ["config/*"]
        }
    },
    "include": [
        "src",
        "scripts",
        "../../globalTypes.d.ts"
    ]
}
